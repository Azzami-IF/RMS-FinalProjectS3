<IfModule mod_rewrite.c>
RewriteEngine On

# Basic hardening
Options -Indexes

# Prefer the root index.php when DocumentRoot cannot be changed.
DirectoryIndex index.php

# Allow ACME challenges for SSL
RewriteRule ^\.well-known/ - [L]

# Serve assets directly
RewriteRule ^assets/ - [L]

# Allow direct access to /public (will use public/.htaccess)
RewriteRule ^public/ - [L]

# Serve existing files/directories in the current docroot
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route non-existing requests through the public front controller
RewriteRule ^ public/index.php [L]
</IfModule>
