<IfModule mod_rewrite.c>
RewriteEngine On

# Serve existing files/directories in /public
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Proxy assets from project root (/assets is outside docroot)
RewriteRule ^assets/(.*)$ asset.php?path=$1 [L,QSA]

# Route everything else to front controller
RewriteRule ^ index.php [L]
</IfModule>
